<ul class="social-sharing">

  {% if settings.share_facebook %}
    <li>
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn btn--small btn--share share-facebook" style="padding: 10px 7px 0 0;">
        {% include 'icon-facebook' %}
      </a> 
    </li> 
  {% endif %}

  {% if settings.share_twitter %}
    <li>
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn btn--small btn--share share-twitter" style="padding: 10px 7px 0 0;">
        {% include 'icon-twitter' %}
      </a>
    </li>
  {% endif %}

  {% if settings.share_pinterest %}
    <li> 
      <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="btn btn--small btn--share share-pinterest" style="padding: 10px 7px 0 0;">
        {% include 'icon-pinterest' %}
      </a>
    </li>
  {% endif %}

</ul>
